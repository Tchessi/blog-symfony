{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <div class="container w-25">
        <div class="row">
            

            <div class="col text-center">
                <img src="https://raw.githubusercontent.com/twbs/icons/main/icons/person-fill.svg" class="rounded-circle mb-3 bg-light p-2" style="width: 150px;"
                    alt="Avatar" />
                
                <h2 class="mb-2"><strong>{{ user.username|capitalize }}</strong></h5>
                {# <p class="text-muted">Web designer <span class="badge bg-primary">PRO</span></p>

                <h2>Profil de {{ user.username|capitalize }}</h2> #}

                <div class="col-12">
                    <label for="username" class="form-label">Nom d'utilisateur</label>
                </div>

                <div class="mb-3"> 

                    <div class="input-group">
                        <span class="input-group-text">@</span>
                        <input type="text" class="form-control" value="{{ user.username }}" readonly>
                    </div>
                </div>

                <div class="mb-3">
                    <p>Nombre de commentaires {{ user.comments|length }}</p>
                </div>
                
            </div>
        </div>
    </div>
{% endblock %}
